let Action(mob, fight) {
  let turn = GetTurnFor(fight, GetUUID(mob))

  return if ((Modulo(turn, 3)) == 0) * ((turn == 1) == false) {
    let target = GetRandomEnemy(fight, GetUUID(mob))

    return 
      (DefaultAction(fight, mob)) + 
      |>
        Event: ACTION_EFFECT,
        Source: GetUUID(mob),
        Target: target,
        Meta: |>
          Effect: EFFECT_DOT,
          Value: 20,
          Duration: 2
        <|
      <|
  } else {
    return DefaultAction(fight, mob)    
  }
}